
{{>layouts/header}}

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
        </tr>
    </thead>
    <tbody>
    {{#articleList}}
        <tr>
            <th>{{id}}</th>
            <th><a href="/articles/{{id}}">{{title}}</a></th>
            <th>{{content}}</th>
        </tr>
    {{/articleList}} <!-- for문 대체, articleList에 포함되있어서  articleList.id를  그냥 id로 쓸 수 있음 -->
    </tbody>
</table>

<a href="/articles/new">New Article</a>

{{>layouts/footer}}